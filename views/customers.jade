extends layout
block content
    div.container-fluid
        table.table.table-striped.table-bordered.table-hover.sortable
            thead
                tr
                    th Id
                    th Company Name
                    th Contact Name
                    th Contact Title
                    th Address
                    th City
                    th Region
                    th Postal Code
                    th Country
                    th Phone
                    th Fax
            tbody
              each customer in customers
                 tr
                     th
                         a(href='/orders/customer/#{customer._id}') #{customer._id}
                     td #{customer.companyName}
                     td #{customer.contactName}
                     td #{customer.contactTitle}
                     td #{customer.address}
                     td #{customer.city}
                     td #{customer.region}
                     td #{customer.postalCode}
                     td #{customer.country}
                     td #{customer.phone}
                     td #{customer.fax}
