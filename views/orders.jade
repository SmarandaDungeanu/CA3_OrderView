extends layout
block content
    div.container
            table.table.table-striped.table-bordered.table-hover.sortable
                thead
                   tr
                      th="Id"
                      th="Name"
                      th="Date"
                      th="Address"
                tbody
                    each o in orders
                       each c in customers
                        if o.customerId == c._id
                         tr
                           th
                               a(href="/orderdetails/#{o._id}")
                                 =o._id
                           td
                             =c.contactName
                           td
                             =o.orderDate
                           td
                             =c.address