extends layout
block content
    div.container-fluid
        table.table.table-striped.table-bordered.table-hover.sortable
            thead
                tr
                    th Id
                    th Name
                    th Description
            tbody
                each c in categories
                 tr
                    th
                        a(href="/products/#{c._id}") #{c._id}
                    td #{c.name}
                    td #{c.description}


